<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
        android:clickable="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:onClick="pressBackBtn" />

    <TextView
        android:id="@+id/tv_praise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/praise"
        android:drawablePadding="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:onClick="pressPraiseBtn"
        android:textSize="15sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/comment"
        android:drawablePadding="2dp"
        android:layout_toLeftOf="@id/tv_praise"
        android:layout_marginRight="3dp"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:onClick="pressCommentBtn"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/tv_collected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/collect"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/tv_comment"
        android:clickable="true"
        android:onClick="pressCollectedBtn"/>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/tv_collected"
        android:background="@mipmap/abc_ic_menu_share_mtrl_alpha"
        android:clickable="true"
        android:onClick="pressShareBtn"/>
</RelativeLayout>
